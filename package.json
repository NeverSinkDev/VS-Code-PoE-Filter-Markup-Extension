{
    "name": "poe-filter-language",
    "displayName": "poe-filter-language",
    "description": "A Path of Exile Filter langauge extension by NeverSink",
    "publisher": "NeverSink",
    "version": "2.0.2",
    "repository": {
        "url": "https://github.com/NeverSinkDev/VS-Code-PoE-Filter-Markup-Extension",
        "type": "git"
    },
    "engines": {
        "vscode": "^1.3.1"
    },
    "categories": [
        "Programming Languages"
    ],
    
    "main": "./out/extension.js",
    
    "contributes": {
        "languages": [
            {
                "id": "filter",
                "aliases": [
                    "filter",
                    "exo"
                ],
                "extensions": [
                    ".filter", ".exo"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "filter",
                "scopeName": "source.poefilter",
                "path": "./syntaxes/filter.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "dependencies": {
        "generator-code": "^1.4.12",
        "yo": "^4.0.0"
    },
    "devDependencies": {
        "webpack": "^5.76.0",
        "webpack-cli": "^4.6.0",
         "@types/vscode": "^1.106.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "typescript-eslint": "^8.46.3",
        "eslint": "^9.39.1",
        "typescript": "^5.9.3",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2"
    }
}
