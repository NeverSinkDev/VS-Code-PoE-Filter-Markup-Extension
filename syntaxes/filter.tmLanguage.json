{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "filter",
	"patterns": [{
		"include": "#operator"
	},
	{
		"include": "#number"
	},
	{
		"include": "#keywords"
	},
	{
		"include": "#strings"
	},
	{
		"include": "#comment-line"
	},
	{
		"include": "#exo"
	}],
	"repository": {
		"operator": {
			"patterns": [{
				"name": "punctuation.definition.tag",
				"match": "(\\{|\\}|\\[|\\]|\\(|\\)|\\;|\\:|\\,)"
			},
			{
				"name": "keyword",
				"match": "(=|<|>|\\-|\\+|\\*)"
			}]
		},
		"number": {
			"patterns": [{
				"name": "entity.name.function",
				"match": "\\b(\\d+)\\b"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword",
				"match": "\\b(Show|Hide|Continue|ShowD|Minimal|HideD|Cont)\\b"
			},
			{
				"name": "entity.name.function",
				"match": "\\b(Rare|Normal|Magic|Unique|True|False|Crusader|Redeemer|Hunter|Elder|Shaper|Warlord|Divergent|Phantasmal|Anomalous|Blue|Green|Brown|Red|White|Yellow|Cyan|Grey|Orange|Pink|Purple|Circle|Diamond|Hexagon|Square|Star|Triangle|Cross|Moon|Raindrop|Kite|Pentagon|UpsideDownHouse|Temp|NONE|None)\\b"
			},
			{
				"name": "variable",
				"match": "\\b(TransfiguredGem|UberBlightedMap|HasCruciblePassiveTree|Scourged|ArchnemesisMod|HasSearingExarchImplicit|HasEaterOfWorldsImplicit|BaseDefencePercentile|BaseEnergyShield|BaseEvasion|BaseArmour|BaseWard|Replica|AlternateQuality|FracturedItem|SynthesisedItem|AnyEnchantment|BlightedMap|ShapedMap|ElderItem|ShaperItem|Corrupted|Identified|ElderMap|Mirrored|HasInfluence|GemQualityType|LinkedSockets|Sockets|Quality|MapTier|WaystoneTier|Width|Height|StackSize|CorruptedMods|GemLevel|ItemLevel|DropLevel|AreaLevel|Rarity|EnchantmentPassiveNum|EnchantmentPassiveNode|SocketGroup|Class|BaseType|Prophecy|HasExplicitMod|HasEnchantment|ZanaMemory|HasImplicitMod|Foulborn|HasVaalUniqueMod|TwiceCorrupted|AlwaysShow|IsVaalUnique|MemoryStrands|UnidentifiedItemTier)\\b"
			},
			{
				"name": "storage",
				"match": "\\b(SetFontSize|SetTextColor|SetBorderColor|SetBackgroundColor|DisableDropSound|PlayAlertSound|PlayAlertSoundPositional|CustomAlertSound|PlayEffect|MinimapIcon)\\b"
			}]
		},
		"exo": {
			"patterns": [{
				"name": "storage",
				"match": "\\b(Section|Style|var|Empty|BLANK|Auto|Apply|Func|Mod|MM|Sound|BG|Beam|BC|BD|TX|BT|Base)\\b"
			},
			{
				"name": "token.debug-token",
				"begin": "!",
				"end": "($|(?=;))",
				"patterns": [{
					"name": "punctuation.definition.tag",
					"match": "(\\.|\\;)"
				}]
			},
			{
				"name": "token.debug-token",
				"begin": "\\$",
				"end": "($|(?=;)|(?==>))",
				"patterns": [{
					"name": "punctuation.definition.tag",
					"match": "(\\.|\\;)"
				}]
			},
			{
				"name": "token.warn-token",
				"begin": "%",
				"end": "($|(?=;))",
				"patterns": [{
					"name": "punctuation.definition.tag",
					"match": "(\\.|\\;)"
				}]
			}]
		},
		"strings": {
			"name": "string",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "string",
				"match": "\\\\"
			}]
		},
		"comment-line": {
			"name": "comment",
			"begin": "#",
			"end": "\n",
			"patterns": [
			{
				"name": "token.info-token",
				"begin": "!!",
				"end": "(?=\\n)"
			},
			{
				"name": "token.debug-token",
				"begin": "%",
				"end": "(?=\\s)"
			},			
			{
				"name": "token.warn-token",
				"begin": "\\$",
				"end": "(?=\\s)"
			},
			{
				"name": "comment",
				"match": "\\\\"
			}]
		}
	},
	"scopeName": "source.poefilter"
}